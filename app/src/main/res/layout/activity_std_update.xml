<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    tools:context=".Std_update">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="25sp"
                android:text="Update Data"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold|italic"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.7"
                        android:hint="Enter rollno which you want to update"
                        android:background="@color/white"
                        android:padding="10dp"
                        android:textColorHint="@color/black"
                        android:layout_margin="10dp"
                        android:id="@+id/edt_roll"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:layout_margin="10dp"
                        android:hint=" Update Name"
                        android:background="@color/white"
                        android:textColorHint="@color/black"
                        android:id="@+id/edt_name"
                        />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="0.3"
                        android:layout_marginRight="10dp"
                        android:text="Update Name"
                        android:textSize="13sp"
                        android:onClick="updateName"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/white"

                        />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:layout_margin="10dp"
                        android:inputType="number"
                        android:maxLength="10"
                        android:hint=" Update MobileNo"
                        android:background="@color/white"
                        android:textColorHint="@color/black"
                        android:id="@+id/edt_mob"
                        />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="0.3"
                        android:layout_marginRight="10dp"
                        android:text=" Update MobileNo"
                        android:textSize="13sp"
                        android:onClick="updateMob"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/black"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:layout_margin="10dp"
                        android:hint=" Update Address"
                        android:background="@color/white"
                        android:textColorHint="@color/black"
                        android:id="@+id/edt_adrs"


                        />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="0.3"
                        android:layout_marginRight="10dp"
                        android:text=" Update Address"
                        android:textSize="13sp"
                        android:onClick="updateAdrs"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/black"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.6"
                        android:layout_margin="10dp"
                        android:hint=" Update Branch"
                        android:background="@color/white"
                        android:textColorHint="@color/black"
                        android:id="@+id/edt_branch"
                        />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="0.3"
                        android:layout_marginRight="10dp"
                        android:textSize="13sp"
                        android:text="Update Branch"
                        android:onClick="updateBranch"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/white"
                        />

                </TableRow>


            </TableLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>